name: Deploy Development

on:
  push:
    branches: [dev]

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      - uses: superfly/flyctl-actions@1.3
        with:
          args: "deploy --config fly.dev.toml"
        env:
          FLY_API_TOKEN: ${{ secrets.FLY_API_TOKEN }}
